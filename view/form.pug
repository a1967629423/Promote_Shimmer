extends ./base/login.pug
block header
    title 表单填写
block append main
    .block-main
        .block
            div.head-title
                h1 免费
                h1 您获得了一个礼包
            .avatar
                img(src=userInfo.headimgurl,class="head-img")
                //- userInfo.headimgurl
                p #{userInfo.nickname}
                h3 送你一份大礼包
            div( class="user")
                form(class="input-usenameform" action="form/upstream" method="post" ) 
                    input( type="text" name="username" class="input-usename" placeholder="姓名")
                    input( type="text" name="userphone" class="input-usephone" placeholder="手机号")
                    input( type="submit" class="use-button")
